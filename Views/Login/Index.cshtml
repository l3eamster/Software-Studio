@model DonutzStudio.Models.LoginForm

@{
    ViewData["Title"] = "ลงชื่อเข้าใช้";
}

<link rel="stylesheet" href="~/css/loginregis.css" />

<div class="page">
    <form asp-action="LoginForm" class="box shadow-lg">
        <h1>ลงชื่อเข้าใช้งาน</h1>
        <div class="form-group">
            <label>ชื่อผู้ใช้งาน</label>
            <i class="fas fa-user-circle"></i>
            <input asp-for="Username" placeholder="ชื่อผู้ใช้งาน" required autofocus />
        </div>
        <div class="form-group">
            <label>รหัสผ่าน</label>
            <i class="fas fa-lock"></i>
            <input type="password" asp-for="Password" placeholder="รหัสผ่าน" required />
        </div>

        <button class="btn my">ลงชื่อเข้าใช้</button>
        <a asp-controller="Register" class="link">ยังไม่มีบัญชี? สร้างบัญชีผู้ใช้งาน</a>
    </form>
</div>
